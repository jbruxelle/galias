{
  "name": "vite-plugin-galias",
  "version": "0.0.1",
  "description": "Galias (Glob alias) is an alias resolving library with adapters for Typescript, Javascript, Vite (and other bundlers), Node...",
  "keywords": [
    "alias",
    "resolve",
    "glob",
    "typescript",
    "javascript",
    "vite",
    "node"
  ],
  "author": {
    "name": "Julian BRUXELLE",
    "email": "contact@julianbruxelle.fr",
    "url": "https://github.com/jbruxelle"
  },
  "bugs": {
    "url": "https://github.com/jbruxelle/galias/issues"
  },
  "homepage": "https://github.com/jbruxelle/galias#readme",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "unbuild",
    "prepack": "pnpm run build",
    "release": "pnpm test && changelogen --release && npm publish && git push --follow-tags",
    "test": "pnpm lint && pnpm test:types && vitest run --coverage",
    "test:types": "tsc --noEmit --skipLibCheck",
    "lint": "eslint --cache && prettier -c .",
    "lint:fix": "eslint --cache && prettier -c . -w"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/cjs/index.cjs",
  "types": "./dist/cjs/index.d.cts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./adapters": {
      "import": {
        "types": "./dist/esm/adapters.d.ts",
        "default": "./dist/esm/adapters.js"
      },
      "require": {
        "types": "./dist/cjs/adapters.d.cts",
        "default": "./dist/cjs/adapters.cjs"
      }
    }
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "glob": "^10.3.10",
    "picomatch": "^2.3.1",
    "vite-plugin-watch-and-run": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/picomatch": "^2.3.1",
    "@vitest/coverage-v8": "^0.34.6",
    "changelogen": "^0.5.5",
    "eslint": "^8.45.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vite": "^4.4.9",
    "vitest": "^0.34.6"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "packageManager": "pnpm@8.7.1"
}
